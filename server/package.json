{
  "name": "serverapp",
  "version": "1.0.0",
  "description": "My cool TypeScript app",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "compile": "ts-node build.ts && tsc",
    "dev": "nodemon server/index.ts | pino-pretty",
    "dev:debug": "nodemon --exec \"node -r ts-node/register --inspect-brk\" server/index.ts | pino-pretty",
    "lint": "eslint -c .eslintrc.js \"{server, test}/**/*.{js,ts,tsx}\" --quiet",
    "lint:fix": "eslint -c .eslintrc.js \"{server, test}/**/*.{js,ts,tsx}\" --quiet --fix",
    "test": "mocha -r ts-node/register test/**/*.ts --exit",
    "test:debug": "mocha -r ts-node/register --inspect-brk test/**/*.ts --exit",
    "generate-types": "openapi-typescript server/common/api.yml --output server/api/api.ts"
  },
  "dependencies": {
    "@types/mongoose": "^5.11.97",
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "express-openapi-validator": "^4.13.8",
    "mongoose": "^8.2.0",
    "pino": "^7.11.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.12",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.45",
    "@types/pino": "^7.0.5",
    "@types/shelljs": "^0.8.15",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "chai": "^4.4.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^4.2.1",
    "mocha": "^9.2.2",
    "nodemon": "^2.0.22",
    "openapi-typescript": "^6.7.4",
    "pino-pretty": "^7.6.1",
    "prettier": "^2.8.8",
    "shelljs": "^0.8.5",
    "supertest": "^6.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5"
  },
  "author": "Carmine DiMascio <cdimascio@gmail.com> (https://github.com/cdimascio)"
}
